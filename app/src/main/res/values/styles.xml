<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
           parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Menu popup options -->
        <item name="android:itemBackground">@color/grey_900</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Preference screen -->
    <style name="PreferenceScreen" parent="AppTheme">
        <item name="android:textColor">@color/blackText</item>
    </style>

    <!-- TabLayout -->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <!--<item name="tabIndicatorHeight">2dp</item>-->
        <!--<item name="tabPaddingStart">12dp</item>-->
        <item name="tabBackground">@drawable/tab_color_selector</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/whiteText</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/grey_800</item>
    </style>

</resources>
