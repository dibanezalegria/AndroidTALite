<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/list_item_lap_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:textSize="@dimen/small_text"
        android:textColor="@color/whiteText"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/list_item_lap_car"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:maxLines="1"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:layout_marginEnd="6dp"
        android:textSize="@dimen/small_text"
        android:textColor="@color/whiteText"/>

    <TextView
        android:id="@+id/list_item_lap_class"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:maxLines="1"
        android:paddingEnd="4dp"
        android:paddingStart="0dp"
        android:textSize="@dimen/small_text"
        android:textColor="@color/whiteText"/>

    <TextView
        android:id="@+id/list_item_lap_nlaps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:maxLines="1"
        android:gravity="center"
        android:textSize="@dimen/small_text"
        android:textColor="@color/whiteText"/>

    <TextView
        android:id="@+id/list_item_lap_s1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/small_text"
        android:textColor="@color/whiteText"/>

    <TextView
        android:id="@+id/list_item_lap_s2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/small_text"
        android:textColor="@color/whiteText"/>

    <TextView
        android:id="@+id/list_item_lap_s3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/small_text"
        android:textColor="@color/whiteText"/>

    <TextView
        android:id="@+id/list_item_lap_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center"
        android:layout_marginStart="6dp"
        android:maxLines="1"
        android:textSize="@dimen/small_text"
        android:textColor="@color/whiteText"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:paddingEnd="6dp"
        android:paddingStart="6dp">

        <ProgressBar
            android:id="@+id/progress_bar_gap"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="80"
            android:progressDrawable="@drawable/gap_progress_bar"
            android:scaleY="100"/>

        <TextView
            android:id="@+id/list_item_lap_gap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:paddingStart="6dp"
            android:textSize="@dimen/small_text"
            android:textColor="@color/whiteText"/>
    </RelativeLayout>

</LinearLayout>
