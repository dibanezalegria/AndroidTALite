<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/list_item_lap_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:textSize="@dimen/small_text"
        android:textColor="@color/whiteText"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/list_item_lap_car"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:maxLines="1"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:textSize="@dimen/small_text"
        android:textColor="@color/whiteText"/>

    <TextView
        android:id="@+id/list_item_lap_class"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:maxLines="1"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:textSize="@dimen/small_text"
        android:textColor="@color/whiteText"/>

    <TextView
        android:id="@+id/list_item_lap_nlaps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/small_text"
        android:textColor="@color/whiteText"/>

    <TextView
        android:id="@+id/list_item_lap_s1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/small_text"
        android:textColor="@color/whiteText"/>

    <TextView
        android:id="@+id/list_item_lap_s2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_weight="8"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/small_text"
        android:textColor="@color/whiteText"/>

    <TextView
        android:id="@+id/list_item_lap_s3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/small_text"
        android:textColor="@color/whiteText"/>

    <TextView
        android:id="@+id/list_item_lap_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/small_text"
        android:textColor="@color/whiteText"/>

    <TextView
        android:id="@+id/list_item_lap_track"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="26"
        android:maxLines="1"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:textSize="@dimen/small_text"
        android:textColor="@color/whiteText"/>

</LinearLayout>
