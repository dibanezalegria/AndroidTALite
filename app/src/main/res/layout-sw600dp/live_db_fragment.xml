<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBg"
    android:orientation="vertical"
    tools:context="com.pbluedotsoft.pcarstimeattacklite.LiveDbFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkBg"
        android:orientation="horizontal">

        <Button
            android:id="@+id/car_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:maxLines="1"
            android:minHeight="0dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="car"
            android:textColor="@color/blackText"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/car_class_spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:popupBackground="@color/darkBg"/>

        <Button
            android:id="@+id/nlaps_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:maxLines="1"
            android:minHeight="0dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="laps"
            android:textColor="@color/blackText"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:minHeight="0dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="s1"
            android:textColor="@color/listItemText"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:layout_weight="8"
            android:gravity="center"
            android:minHeight="0dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="s2"
            android:textColor="@color/listItemText"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:minHeight="0dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="s3"
            android:textColor="@color/listItemText"/>

        <Button
            android:id="@+id/time_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"
            android:maxLines="1"
            android:minHeight="0dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="time"
            android:textColor="@color/blackText"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/track_spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="26"
            android:popupBackground="@color/darkBg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/layout_laptimes_empty_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:contentDescription="@string/empty_list_view_description"
            android:src="@mipmap/watch_icon"
            android:tint="@color/empty_list_icon_tint"/>

        <ListView
            android:id="@+id/laptimes_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:scrollbarSize="5dp"
            android:scrollbarThumbVertical="@android:color/holo_blue_dark"/>
    </LinearLayout>

</LinearLayout>
